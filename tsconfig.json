{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["./src"]
}
